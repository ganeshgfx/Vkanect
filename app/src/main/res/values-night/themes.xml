<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vkanect" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00BFA5</item>
        <item name="colorPrimaryVariant">#388E6C</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?android:attr/windowBackground</item>
<!--        <item name="android:statusBarColor">#252525</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Vkanect.NoAcc" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">?android:attr/windowBackground</item>
    </style>
</resources>