<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fac_home"
    tools:context=".faculty.frag.F_HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
android:id="@+id/ttBtn"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Surface"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_date_range_24"
                    android:drawableTint="@color/teal_700"
                    android:text="Time Table"
                    android:textColor="@color/teal_700" />
                <Button
                    android:id="@+id/atdBtn"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Surface"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_twotone_done_all_24"
                    android:drawableTint="@color/teal_700"
                    android:text="Attendees"
                    android:textColor="@color/teal_700" />
                <Button
                    android:id="@+id/passBtn"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Surface"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_twotone_class_24"
                    android:drawableTint="@color/teal_700"
                    android:text="Result"
                    android:textColor="@color/teal_700" />
                <Button
                    android:id="@+id/paisaBtn"
                    style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Surface"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_twotone_monetization_on_24"
                    android:drawableTint="@color/teal_700"
                    android:text="Fees"
                    android:textColor="@color/teal_700" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>